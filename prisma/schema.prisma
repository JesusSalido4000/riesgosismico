generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../apps/server/dev.db"
}

model Assessment {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  lat               Float
  lon               Float
  address           String
  inputsJson        String
  hazardsJson       String
  vulnerabilityJson String
  score             Float
  category          String
}
